{
  "name": "rest-public-api",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon --delay 0.5 src/main.js --ext js",
    "lint": "eslint .",
    "install:clean": "rm -rf node_modules/ && rm -rf dist/ && rm -rf package-lock.json && npm install && npm run dev",
    "lint:fix": "eslint . --fix",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --detectOpenHandles --verbose",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Carlos Chac√≥n Calvo, Victor Rodriguez Miranda",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^29.7.0",
    "lint-staged": "^10.1.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^7.0.0"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "preserve",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "globals": {
      "wp": "readonly",
      "axios": "writable",
      "$": "writable"
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "parser": "eslint",
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {
      "no-debugger": 1,
      "no-alert": 1,
      "space-before-function-paren": 0,
      "import/prefer-default-export": 0,
      "no-restricted-syntax": [
        2,
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-unused-vars": [
        1,
        {
          "ignoreSiblings": true,
          "argsIgnorePattern": "res|next|^err|item|_|__"
        }
      ],
      "import": 0,
      "no-shadow": [
        2,
        {
          "hoist": "functions",
          "allow": [
            "resolve",
            "reject",
            "done",
            "next",
            "err",
            "error",
            "state",
            "getters",
            "index",
            "*.resolvers.js"
          ]
        }
      ],
      "no-return-assign": [
        2,
        "except-parens"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "array-callback-return": [
        0
      ],
      "no-unused-expressions": [
        2,
        {
          "allowTaggedTemplates": true
        }
      ],
      "comma-dangle": 0,
      "max-len": 0,
      "import/extensions": 0,
      "no-underscore-dangle": 0,
      "consistent-return": 0,
      "no-useless-escape": "off",
      "no-nested-ternary": 0,
      "radix": 0,
      "no-use-before-define": [
        0,
        {
          "functions": false
        }
      ],
      "prefer-const": [
        1,
        {
          "destructuring": "all"
        }
      ],
      "complexity": [
        1,
        22
      ]
    }
  },
  "env": {
    "jest": true
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {},
    "setupFilesAfterEnv": [
      "./jest-preload-env.js"
    ]
  }
}
